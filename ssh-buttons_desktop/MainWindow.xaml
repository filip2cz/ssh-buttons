<Window x:Class="ssh_buttons_desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ssh_buttons_desktop"
        mc:Ignorable="d"
        Title="SSH-Buttons" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <CheckBox />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Click="Button_Click1" Grid.Column="0" Content="Button1 is empty" HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Center" Width="180" Height="70"/>
            <Button Click="Button_Click2" Grid.Column="1" Content="Button2 is empty" HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Center" Width="180" Height="70"/>
            <Button Click="Button_Click3" Grid.Column="2" Content="Button3 is empty" HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Center" Width="180" Height="70"/>
            <Button Click="Button_Click4" Grid.Column="3" Content="Button4 is empty" HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Center" Width="180" Height="70"/>
            <Button Click="Button_Click5" Grid.Column="0" Content="Button5 is empty" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="180" Height="70"/>
            <Button Click="Button_Click6" Grid.Column="1" Content="Button6 is empty" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="180" Height="70"/>
            <Button Click="Button_Click7" Grid.Column="2" Content="Button7 is empty" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="180" Height="70"/>
            <Button Click="Button_Click8" Grid.Column="3" Content="Button8 is empty" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="180" Height="70"/>
        </Grid>
        <Grid Grid.Row="2">
            <Label Content="Grid3"/>
        </Grid>
    </Grid>
        
</Window>
